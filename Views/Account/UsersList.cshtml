@model IEnumerable<UIJCCA.web.Models.ApplicationUser>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Список пользователей";
}
<div class="jumbotron">
    <h2>Единый информационный журнал заявок каналов связи УФПС Томской области</h2>
    <p>Список пользователей</p>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Регистрация нового пользователя", "Register","Account", htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.ActionLink("Добавление роли", "Create")
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>Логин</th>
                    <th>Email</th>
                    <th>Почтамт</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.idpost</td>
                        
                        <td>
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }) |                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



