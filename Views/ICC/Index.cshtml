            @Html.DisplayFor(modelItem => item.TypeOfService.typeOfService)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.internetSpeed)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.idObject }) |
