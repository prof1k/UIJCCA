@model IEnumerable<DomainModel.Entity.ICC>

@{
    ViewBag.Title = "Каналы связи";
}

<h2>Каналы связи</h2>

<p>
    @Html.ActionLink("Добавить новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
